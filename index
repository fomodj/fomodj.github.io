        const categoryIcons = {
            "å¸¸ç”¨ç½‘ç«™": "â­",
            "å¤§å­¦æœºæ„": "ğŸ“",
            "ç¿»è¯‘å·¥å…·": "ğŸŒ",
            "æ¡£æ¡ˆæ•°æ®": "ğŸ“š",
            "ä¹¦ç±è·å–": "ğŸ“–",
            "å­¦æœ¯å·¥å…·": "ğŸ”§"
        };

        function renderLinks() {
            const container = document.getElementById('categoriesContainer');
            container.innerHTML = '';

            for (const [category, items] of Object.entries(links)) {
                const categoryDiv = document.createElement('div');
                categoryDiv.className = 'category';
                
                const title = document.createElement('h2');
                title.className = 'category-title';
                title.innerHTML = `<span class="category-icon">${categoryIcons[category] || 'ğŸ“Œ'}</span>${category}`;
                
                const grid = document.createElement('div');
                grid.className = 'links-grid';
                
                items.forEach(item => {
                    const card = document.createElement('a');
                    card.className = 'link-card';
                    card.href = item.url;
                    card.target = '_blank';
                    card.rel = 'noopener noreferrer';
                    card.dataset.title = item.title.toLowerCase();
                    card.dataset.url = item.url.toLowerCase();
                    
                    card.innerHTML = `
                        <div class="link-title">${item.title}</div>
                        <div class="link-url">${item.url}</div>
                    `;
                    
                    grid.appendChild(card);
                });
                
                categoryDiv.appendChild(title);
                categoryDiv.appendChild(grid);
                container.appendChild(categoryDiv);
            }
        }

        // æœç´¢åŠŸèƒ½
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.link-card');
            const categories = document.querySelectorAll('.category');

            categories.forEach(category => {
                let hasVisibleCard = false;
                const categoryCards = category.querySelectorAll('.link-card');
                
                categoryCards.forEach(card => {
                    const title = card.dataset.title;
                    const url = card.dataset.url;
                    
                    if (title.includes(searchTerm) || url.includes(searchTerm)) {
                        card.classList.remove('hidden');
                        hasVisibleCard = true;
                    } else {
                        card.classList.add('hidden');
                    }
                });

                category.style.display = hasVisibleCard ? 'block' : 'none';
            });
        });

        // ä¸»é¢˜åˆ‡æ¢
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        const currentTheme = localStorage.getItem('theme') || 'light';

        if (currentTheme === 'dark') {
            document.documentElement.setAttribute('data-theme', 'dark');
            themeIcon.textContent = 'â˜€ï¸';
        }

        themeToggle.addEventListener('click', () => {
            const theme = document.documentElement.getAttribute('data-theme');
            if (theme === 'dark') {
                document.documentElement.setAttribute('data-theme', 'light');
                themeIcon.textContent = 'ğŸŒ™';
                localStorage.setItem('theme', 'light');
            } else {
                document.documentElement.setAttribute('data-theme', 'dark');
                themeIcon.textContent = 'â˜€ï¸';
                localStorage.setItem('theme', 'dark');
            }
        });

        // åŠ è½½ä¸€è¨€
        fetch('https://v1.hitokoto.cn/?c=d&c=i&c=k')
            .then(response => response.json())
            .then(data => {
                document.getElementById('hitokoto').innerHTML = `
                    "${data.hitokoto}"
                    ${data.from ? `<br><small>â€”â€”${data.from}</small>` : ''}
                `;
            })
            .catch(() => {
                document.getElementById('hitokoto').textContent = 'å­¦é—®ä¹‹é“ï¼Œè´µåœ¨åšæŒä¸æ¢ç´¢';
            });

        // åˆå§‹åŒ–
        renderLinks();
    </script>
